{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "es5", "es6"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "types": ["mocha", "node"]
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "./build",
    "./node_modules",
    "**/*.test.ts"
  ]
}
